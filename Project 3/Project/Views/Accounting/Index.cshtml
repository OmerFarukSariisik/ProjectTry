<script src="https://cdn.jsdelivr.net/npm/signature_pad@4.1.7/dist/signature_pad.umd.min.js"></script>
@{
    ViewData["Title"] = "Accounting";
}

@model Project.Models.Bill[]

<div class="text-center">
    <div class="d-inline-block mx-4">
        <h3>
            <a href="@Url.Action("Index", "Home")"> Home</a>
        </h3>
    </div>
    <div class="d-inline-block mx-4">
        <h3>
            <a href="@Url.Action("ProformaInvoiceIndex", "ProformaInvoice")"> Proforma Invoices</a>
        </h3>
    </div>
    <div class="d-inline-block mx-4">
        <h3>
            <a href="@Url.Action("PendingIndex", "Pending")"> Pending</a>
        </h3>
    </div>
    <div class="d-inline-block mx-4">
        <h3>
            <a> Invoices</a>
        </h3>
    </div>

    <div class="d-inline-block mx-4">
        <h3>
            <a href="@Url.Action("VoucherIndex", "Voucher")"> Vouchers</a>
        </h3>
    </div>
</div>

<h2>Bills</h2>

<p>
    <a href="@Url.Action("CreatePage", "Accounting")">Create New Bill</a>
</p>

<div>
    <form asp-action="Search" method="post">
        <label for="searchString">Search by Invoice Number:</label>
        <input type="text" id="searchString" name="searchString"/>
        <button type="submit">Search</button>
    </form>
</div>
<div>
    <form asp-action="SearchByName" method="post">
        <label for="searchNameString">Search by Name:</label>
        <input type="text" id="searchNameString" name="searchNameString"/>
        <button type="submit">Search</button>
    </form>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().InvoiceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().InvoiceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().InvoiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Currency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CustomerFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DeliveryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SignatureString)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <th>
                <canvas class="displayCanvas" width="100" height="50" data-signaturestring="@item.SignatureString"></canvas>
            </th>

            <td>
                <a href="@Url.Action("EditPage", "Accounting", new { targetInvoiceId = item.InvoiceId })">Edit</a>
                <a href="@Url.Action("Delete", "Accounting", new { id = item.InvoiceId })" class="delete-link" onclick="return confirmDelete()">Delete</a>
                <a href="@Url.Action("ShowInvoice", "Accounting", new { id = item.InvoiceId })">Show</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            // Iterate over each canvas with the 'displayCanvas' class
            $('.displayCanvas').each(function () {
                var canvas = this;
                var signaturePad = new SignaturePad(canvas);

                // Function to load and display the signature
                function loadAndDisplaySignature(signatureData) {
                    signaturePad.fromDataURL(signatureData);
                }

                // Call the function with the signature data from the canvas's data attribute
                console.log("display:" + $(canvas).data('signaturestring'));
                loadAndDisplaySignature($(canvas).data('signaturestring'));
            });
        });
        
        function confirmDelete() {
                return confirm("Are you sure you want to delete this item?");
        }
    </script>
}
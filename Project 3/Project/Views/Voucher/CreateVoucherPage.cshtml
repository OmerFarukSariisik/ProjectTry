<script>
            const canvas = document.getElementById('signatureCanvas');
            const ctx = canvas.getContext('2d');
            let isDrawing = false;
            
            canvas.addEventListener('mousedown', (e) => {
                isDrawing = true;
                ctx.beginPath();
                ctx.moveTo(e.offsetX, e.offsetY);
            });
            
            canvas.addEventListener('mousemove', (e) => {
                if (isDrawing) {
                    ctx.lineTo(e.offsetX, e.offsetY);
                    ctx.stroke();
                }
            });
            
            canvas.addEventListener('mouseup', () => {
                isDrawing = false;
                // When the drawing is done, save the signature as data URL
                const dataURL = canvas.toDataURL();
                console.log("dataURL:" + dataURL);
                //const compressedData = LZString.compressToEncodedURIComponent(dataURL);
                document.getElementById('signatureInput').value = dataURL; // Set the value in hidden input
            });
</script>

<script>
        $(document).ready(function () {
            $("#priceInput").on("input", function () {
                // Get the entered price
                var price = parseFloat($(this).val());

                // Call a function to convert and update the text
                updateConvertedText(price);
            });

            function updateConvertedText(price) {
                // Make an AJAX call to a server-side action method to get the converted text
                $.ajax({
                    type: "GET",
                    url: "/Voucher/ConvertToWords",
                    data: { amount: price },
                    success: function (result) {
                        // Update the text in the span
                        $("#convertedText").text(result);
                    }
                });
            }
        });
    </script>
@{
    ViewData["Title"] = "Customers";
}

@model Project.Models.Customer[]


<div id="top-bar">
    <div id="selectedpanelitem">
        <h3>
            Customers
        </h3>
    </div>
</div>

<br/><br/><br/>
@*<p>
    <a href="@Url.Action("CreateCustomerPage", "Customer")">Create New Customer</a>
</p>*@

<div>
    <a href="@Url.Action("SendMailToAllCustomers", "Customer")" class="btn btn-primary">Send Mail to All Customers</a>
</div>
<br/>

<table class="styled-table">
    <thead>
    <tr>
        <th>
            Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MotherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MobileNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().WhatsAppNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TRNNumber)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Satisfaction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhatsAppNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TRNNumber)
            </td>

            <td>
                <a class="tablebutton" href="@Url.Action("MailToCustomerPage", "Customer", new { id = item.CustomerId })">
                    <span class="tablebutton_text">Mail</span>
                </a>
                <a class="tablebutton" href="@Url.Action("EditCustomerPage", "Customer", new { id = item.CustomerId })">
                    <span class="tablebutton_text">Edit</span>
                </a>
                <a class="tablebutton" href="@Url.Action("Delete", "Customer", new { id = item.CustomerId })" onclick="return confirmDelete()">
                    <span class="tablebutton_text">Delete</span>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts {
    <script>
        function confirmDelete() {
                return confirm("Are you sure you want to delete this item?");
        }
    </script>
}